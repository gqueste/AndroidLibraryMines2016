<?xml version="1.0" encoding="utf-8"?>
<com.example.gqueste.gqueste.BookItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coverImageView"
            android:layout_width="@dimen/cover_item_view_width"
            android:layout_height="@dimen/cover_item_view_height"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textSize="@dimen/title_book_item_view_size"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_item_view"
            tools:text="Garry Potier Tome 1 eubie zeuibzeb zefuhi uzeiuze uzif"/>

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_item_view"
            tools:text="15â‚¬"/>

    </LinearLayout>
</com.example.gqueste.gqueste.BookItemView>